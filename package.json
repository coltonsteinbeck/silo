{
  "name": "silo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "dev": "bun run --filter '*' dev",
    "dev:bot": "bun --watch packages/bot/src/index.ts",
    "predev:bot": "bun test",
    "start:prod": "bun packages/bot/src/shard.ts",
    "prestart:prod": "bun test",
    "start:pm2": "pm2 start ecosystem.config.json",
    "stop:pm2": "pm2 stop silo",
    "restart:pm2": "pm2 restart silo",
    "logs:pm2": "pm2 logs silo --lines 100",
    "logs:pm2:live": "pm2 logs silo --lines 50",
    "logs:pm2:error": "pm2 logs silo --err --lines 100",
    "logs:pm2:out": "pm2 logs silo --out --lines 100",
    "logs:file": "tail -n 100 logs/pm2-out.log",
    "logs:file:error": "tail -n 100 logs/pm2-error.log",
    "logs:file:live": "tail -f logs/pm2-out.log",
    "status:pm2": "pm2 status",
    "protect:env": "sh -c 'git ls-files --error-unmatch .env >/dev/null 2>&1 && git update-index --skip-worktree .env || echo \".env not tracked; skip-worktree not needed\"'",
    "pm2:logrotate:install": "pm2 install pm2-logrotate",
    "pm2:logrotate:configure": "pm2 set pm2-logrotate:rotateInterval '0 0 * * *' && pm2 set pm2-logrotate:retain 7 && pm2 set pm2-logrotate:compress true",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "migrate": "bash scripts/migrate.sh",
    "migrate:remote": "bash scripts/migrate-universal.sh",
    "type-check": "bun run --filter '*' type-check",
    "lint": "eslint packages --ext .ts",
    "lint:fix": "eslint packages --ext .ts --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "format:check": "prettier --check \"packages/**/*.ts\"",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.39.2",
    "@types/bun": "1.3.2",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.50.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.6.2",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
